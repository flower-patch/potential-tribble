  # => [["none"]]
  # irb(main):002:0> "fill:none".scan(/:(\S*$)/)[0]
  # => ["none"]
  # irb(main):003:0> "fill:none".scan(/:(\S*$)/)[0][0]
  # => "none"
  # irb(main):004:0>
