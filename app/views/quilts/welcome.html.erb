<div class="welcome-view width-welcome">

  <div class="hero">
  	<div class="hero-inner">
      <%= image_tag "flowerpatch_logo.svg", class:"flowerpatch-logo" %>
  			<div class ="title">
          <span class="flowerpatch-logo-text">
            <span class="flower-text">flower</span><span class="patch-text">patch</span>
          </span>
        </div>

        <div class="hero-copy">
  			  <p>Where you can create your own quilt with the Spoonflower fabrics you love</p>
  	    </div>
      <button class="start-project"><%= link_to 'Start New Project', project_templates_choose_project_path %></button>
  	</div>
  </div>




  <div class="cards">
    <!-- add header here describing list -->
    <!-- CHRISTEN: limit to three -->
    <% @quilts.each do |quilt| %>
    <% if quilt.public %>
    <div class="card paper-border">
      <div class="card-image">
        <!-- CHRISTEN:  insert svgs here in image_tag,  -->
        <a href = "/project_templates/choose_project?quilt_id=<%=quilt.id%>"><%= image_tag "#{quilt.preview_thumb_url}"%></img></a>
      </div>
      <div class="card-header">
        <p class="card-title"><%= link_to quilt.name, project_templates_choose_project_path(quilt_id: quilt.id) %></p>
      </div>
      <!-- <div class="card-copy"></div> -->
    </div>
    <% end %>
    <% end %>
  </div>


</div>
