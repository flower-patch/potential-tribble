
<%= render :partial => 'shared/progress', :locals => {:page => 2} %>

<div class="block-view view-container">

  <div class="cards">
    <% @blocks.each do |block| %>
      <%= link_to quilts_edit_project_path(block_id: block.id, project_id: params[:project_id]) do %>
        <div class="card paper-border block">
          <div class="card-image">
            <%= Block.getXML_for_filename( block.block_svg_url ).html_safe %>
          </div>
          <div class="card-header">
            <p class="card-title"><%= block.name %></p>
          </div>

          <% end %>
        </div>
    <% end %>
  </div>
  <div class="back-to-top">
    <a class="scroll-on-page-link" href="#scroll-on-page-top">Back to top</a>
  </div>

</div>
